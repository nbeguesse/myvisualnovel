<h2>Characters</h2>
<ul class="thumbnails character-index">
	
	<% Character.all_available.each do |named_character| %>
	  <li class="span4">
		<div class="thumbnail">
		<img data-src="holder.js/300x200" alt="" style="width:300px;height:200px; background-color:lightgray">
		<%if character = named_character.first(:conditions=>["project_id=?",@project.id])%>
		  <%=form_for character, :as=>:character, :url=>project_character_path(@project, character) do |f|%>
		    <h3>
		    	<span><%=character.name%> <a class="btn btn-mini edit-name" href="#" title="Click to Change Name">Change</a></span>
		    	<%=f.text_field :name, :class=>"hide controls name"%>
		    	<button class="btn hide controls submitable" type="button">GO</button>
		    </h3>
		    
		  <%end%>
		<%else%>
		<h3><%=named_character%></h3>
		<%end%>
		
		<input type="hidden" name="redirect" value="<%=project_characters_path(@project)%>">
		<p>
		<%=form_tag toggle_character_path(@project.id, named_character.to_s)%>
		  <input type="checkbox" <%if character%>checked="checked" onClick="javascript:confirmCharacterRemoval();"<%end%> class="checkbox submitable">
          Appears in &ldquo;<%=@project.title%>&rdquo;</p>
       </form>
		</div>
	  </li>

	
	<%end%>
</ul>




