<!DOCTYPE html>
<html class="<%=@html_class || "normal"%>">
<head>
  <%@page_title = @page_title || humanize_title(@current_uri)%>
  <title><%=wrap_title @page_title.titleize%></title>
  <%= stylesheet_link_tag "bootstrap.css","inlineplayer","flashblock","application", :cache=>"mvn" %>
  
  <%= csrf_meta_tags %>
  <%if @project.try(:title) || @include_cool_font%>
    <link href='http://fonts.googleapis.com/css?family=Great+Vibes&text=<%=@include_cool_font || @project.title.titleize%>' rel='stylesheet' type='text/css'>
  <%end%>
</head>
<body class="<%=@body_class || ""%>">
<%= yield(:head) || "" %>
<div style="position:relative">
<div class="navbar">
          <div class="navbar-inner">
            <div class="container">
              <div class="nav">

                    <ul class="breadcrumb">
                    <li><%=link_to "MyVisualNovel", root_url%> <span class="divider">/</span></li>
                    <li><%=link_to "Forum", forum_path%> <span class="divider">/</span></li>
                    <%unless session_obj.projects.empty?%>
                      <li><%=link_to "My Novels", projects_path%> <span class="divider">/</span></li>
                    <%end%>
                    <%if @project && !@project.new_record?%>
                      <li><%=link_to coolify(@project.title), @project%> <span class="divider">/</span></li>
                    <%end%>
                    <%if @scene%>
                      <li><%=link_to @scene.get_description, edit_project_scene_path(@project, @scene)%> <span class="divider">/</span></li>
                    <%end%>
                    <li style="float:right">
                    <%if logged_in?%>
                      <%=link_to "Logout", logout_path%>
                    <%else%>
                      <%=link_to "Login", login_path%>
                    <%end%>
                   </li>
                    </ul>
                    
                </li>
              </div>
            </div>
          </div>
        </div>
<div class="container-narrow">
  <div class="jumbotron">
  <%if notice%>
      <div class="alert alert-info">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= notice%>
      </div>
  <%end%>
  <%= yield %>
  </div>
</div>
</div>
<%if @backlink%>
  <a id="backlink" class="carousel-control left" href="<%=@backlink%>?backlink=<%=@current_uri%>" >&lsaquo;<br/><span class="backlink"><%=humanize_title(@backlink)%></span></a>
<%end%>
<%if @nextlink = @default_nextlink || @nextlink%>
  <a id="nextlink" class="carousel-control right" href="<%=@nextlink%>">&rsaquo;<br/><span class="backlink"><%=humanize_title(@nextlink)%></span></a>
 
<%end%>
<%= javascript_include_tag "jquery","jquery-ui-1.10.3.custom.min.js","bootstrap.js","slide","popups","application", :cache=>"mvn" %>
<%= yield(:javascript) || "" %>
</body>
</html>
