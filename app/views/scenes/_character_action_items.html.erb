				  	    <%present = @current_event.has_character?(character) %>
				  	    <div class="action-items-holder action-items-for-<%=character.id%> <%=present ? "char-present" : "char-missing"%>">
				  	      	<!-- This table is shown if they are present -->
				  	      <table class="action-items char-present">
					  	 	<tr>
					  	 	  <td rowspan=3 class="icon">
					  	 	  	<div class="btn tippable edit-speak" title="Click to make me talk!" data-character-id="<%=character.id%>" data-name="<%=character.name%>"><%=image_tag character.icon%></div>
					  	 	  </td>
					  	 	  <td class="btn btn-small">
					  	 	  	<a href="#" class="edit-speak" data-type="CharacterSpeaksEvent" data-character-id="<%=character.id%>" data-name="<%=character.name%>"><%=character.name%> speaks</a>
					  	 	  </td>
					  	 	</tr>
					  	 	<tr>
					  	 	  <td class="btn btn-small">
					  	 	  	<%if @scene.love_scene?%>
					  	 	  	  <a href="#" class="edit-pose" data-character-id="<%=character.id%>"><%=character.name%> changes pose</a>
					  	 	  	<%else%>
					  	 	  	  <a href="#" class="edit-face" data-character-id="<%=character.id%>"><%=character.name%> changes face</a>
					  	 	  	<%end%>
					  	 	  </td>
					  	 	</tr>
					  	 	<%if !@scene.love_scene?%>
					  	 	  <tr>
					  	 	  	<td class="btn btn-small">
					  	 		  <%=form_tag update_event_project_scene_path(@project, @scene)%>
						  	 		  <input type="hidden" name="event[type]" value="CharacterVanishEvent">
						  	 		  <input type="hidden" name="event[character_id]" value="<%=character.id%>">
						  	 		  <input type="hidden" name="event[order_index]" class="event_order" value="<%=@event_index%>">
						  	 		  <a href="#" class="submitable"><%=character.name%> vanishes</a>
					  	 	      </form>
					  	 	    </td>
					  	      </tr>
					  	 	<%end%>
				  	      </table>
				  	      <!-- This table is shown if they are missing! -->
				  	      <table class="action-items char-missing">
					  	 	<tr>
					  	 		<td class="btn btn-small">
					  	 			<a href="#" class="edit-<%=@scene.love_scene? ? "pose" : "clothes"%>" data-character-id="<%=character.id%>"><%=character.name%> appears</a>
					  	 		</td>
					  	 	</tr>
				  	      </table>
				  	    </div>