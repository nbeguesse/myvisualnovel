		
		<%play ||= false%>
		<%if scene%>
		  <%last_index = scene.events.count%>
	      <%event = Event.for_scene(scene).at(last_index).first%>
		<%elsif scene%>  
		  <%middle_index = scene.middle_index%>
	      <%event = Event.for_scene(scene).at(middle_index).first%>
	    <%end%>
	    <%if scene && event%>
	        <%char = event.characters_present%>
	    	<%=image_tag(char[0][1], :class=>"bg") if char[0]%>
	    	<%=image_tag(char[1][1], :class=>"characters character1") if char[1]%>
	    	<%=image_tag(char[1][2], :class=>"characters character1") if char[1].try(:third)%>
	    	<%=image_tag(char[2][1], :class=>"characters character2") if char[2]%>
	    	<%=image_tag(char[2][2], :class=>"characters character2") if char[2].try(:third)%>
		    <%if event.glassbox?%>
		      <%=image_tag "glassbox.png", :class=>"glass"%>
		      <div class="speaker"><%=event.character_name%></div>
			  <div class="textarea"><%=simple_format event.get_text%></div>
		    <%end%>

		  
		<%else%>
		  <%=image_tag BackgroundImageEvent.default.get_file%>
		<%end%>
		<%if play%>
		    <%=image_tag "play_cover.png", :class=>"glass"%>
		 <%end%>