
<h2>My Novels</h2>

 <ul class="thumbnails">
  <%session_obj.projects.each do |project|%>
    <li class="span2 thumbnail">
      

      <%scene = Scene.for_project(project).at(project.middle_index).first%>
      <a href="<%=project_path(project)%>">
      <%=render :partial=>"scenes/thumbnail", :locals=>{:scene=>scene}%>
      <p><%=project.title%></p> </a>
      <p><a class="btn btn-small" href="<%=project_path(project)%>"><i class="icon-pencil"></i> Edit</a>
        <%shareable = project.public? ? 'title="Cut & Paste the URL to Share"' : ""%>
        <a class="btn btn-small btn-primary" href="<%=project.play_path%>" <%=raw(shareable)%>><i class="icon-play icon-white"></i> Play</a></p>
      
    </li>
  <%end%>
</ul>