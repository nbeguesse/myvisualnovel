
<h2>Edit My Visual Novels</h2>

 <ul class="thumbnails">
  <%session_obj.projects.each do |project|%>
    <li class="span3">
      

      <%scene = Scene.for_project(project).at(project.middle_index).first%>
      <a href="<%=project_path(project)%>" class="thumbnail tiny-viewer" style="position:relative;">
        <%=render :partial=>"scenes/thumbnail", :locals=>{:scene=>scene}%>
        <p><%=coolify project.title%></p> 
      </a>
      <p>
        <a class="btn btn-small" href="<%=project_path(project)%>" title="Change it!"><i class="icon-pencil"></i> Edit</a>
        <a class="btn btn-small btn-primary" href="<%=project.play_path%>" title="Watch it!"><i class="icon-play icon-white"></i> Play</a>
        <%if project.public?%>
        <a class="btn btn-small share-link" href="#" title="To make private, go to Edit > Customize"><i class="icon-share"></i> Share</a>
        <%end%>
      </p>
      <p class="share">
      <small>
        Cut-and-paste this URL to share: <small><%=play_url(project.id, project.basename)%></small>
      </small>
      </p>
      <small><%=pluralize(project.views, 'view') if project.views > 0%></small>
      
    </li>
  <%end%>
</ul>
<p>&nbsp;</p>
<h3><a href="<%=new_project_path%>">Start a New Visual Novel</a></h3>
<p>&nbsp;</p>
