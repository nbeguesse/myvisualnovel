      <%=f.radio_button :public, :false%><b>Private</b> - Only you can view it while logged in.
    </td>
    </tr>
  </table>
  <button type="submit" class="btn btn-primary">Change</button>


<%end%>
  <%= form_for([@project], :method => :delete) do |f|%>   
        <a class="btn btn-small delete-scene">Delete Novel</a>
  <%end%>